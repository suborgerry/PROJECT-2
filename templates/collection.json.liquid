{% layout none %}

<div class="product-grids">
    <div class="grid-items">
        {% if collection.products_count > 0 %}    
        {% for product in collection.products limit: 10 %}
        <div class="grid-item col-6 col-md-4 col-lg-3 col5{% if settings.product_image_border %} grid-item-border{% endif %} " data-handle='{{product.handle}}'>
            {% if settings.style_product_grid == 'style_product_grid_2' %}
              {% render 'product-grid-item-style-2' with product as product %}
            {% else %}
              {% render 'product-grid-item' with product as product %}
            {% endif %}
        </div>
        {% endfor%}

        {% else %}
        <div class="text-center" {% if settings.enable_multilang %}data-translate="collections.general.no_matches"{% endif %}>
            {{ 'collections.general.no_matches' | t }}
        </div>
        {% endif %}
    </div>
</div>