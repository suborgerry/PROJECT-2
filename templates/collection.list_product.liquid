{% layout none %}
{%- for tag in current_tags -%}
    {%- if tag contains 'limit=' -%}
        {%- assign limit = tag | remove: 'limit=' -%}        
    {%- elsif tag contains 'layout=' -%}
        {%- assign layout = tag | remove: 'layout=' -%}        
    {%- endif -%}
{%- endfor -%}
{%- for product in collections[collection.handle].products limit: limit -%}
    <div class="grid-item col-6 col-md-4 col-lg-3 col5{% if settings.product_image_border %} grid-item-border{% endif %}">
        {% if settings.style_product_grid == 'style_product_grid_2' %}
	        {%- render 'product-grid-item-style-2' with product as product -%}
	      {% else %}
	        {%- render 'product-grid-item' with product as product -%}
	     {% endif %}
    </div>
{%- endfor -%}