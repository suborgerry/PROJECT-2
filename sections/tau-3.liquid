            },
            {
                "type": "select",
                "id": "style_slideshow",
                "label": "Style Slideshow",
                "default": "style_1",
                "options": [
                {
                    "value": "style_1",
                    "label": "Style 1"
                },
                {
                    "value": "style_2",
                    "label": "Style 2"
                }
                ]
