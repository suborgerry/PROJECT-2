                "label": "Dots Active color",
                "default": "#505656",
                "info": "Default Value: #505656"
            },
            {
                "type": "checkbox",
                "id": "dots_opacity",
                "label": "Dots Opacity (80%)",
                "default": false
            },
            {
                "type": "color",
                "id": "bg_dots_color",
                "label": "Dots Background Style 2",
                "default": "#bababa",
                "info": "======================="
            },
            {
                "type": "checkbox",
                "id": "arrow_active",
                "label": "Show Arrow for Slideshow (Desktop)",
                "default": true
            },
            {
                "type": "color",
                "id": "arrow_color",
                "label": "Arrow color",
                "default": "#666d6d",
