{% if settings.use_color_swatch %}
<ul class="item-swatch">
    {% for option in product.options %}
  
    {% assign downcased_option = option | downcase %}
    {% assign option_color_swatch = settings.option_color_swatch | downcase %}
  
    {% if option_color_swatch contains downcased_option %}
    {% assign index = forloop.index0 %}
    {% assign colorlist = '' %}
    {% assign color = '' %}
    {% assign option_count = 0 %}
    {% for variant in product.variants %}
    {% capture color %}
    {{ variant.options[index] }}
    {% endcapture %}
    {% unless colorlist contains color %}
    {% assign text = color | handleize %}

    {% if option_count < 4 %}
    <li>
        <div class="tooltip">
            {{color}}
        </div>

        <label {% if product.options_with_values.size == 1 %}data-with-one-option="{{variant.id}}" data-quantity="{{ variant.inventory_quantity }}"{% endif %} class="{% if option_count == 0 %}active{% endif %} {% if product.options_with_values.size == 1 and variant.inventory_quantity == 0 %}soldout{% endif %}" data-value="{{ text }}" title="{{color}}" {% if variant.image != null %}  data-img="{{ variant.image.src | product_img_url: '800x' }}"{% endif %} style="
          {%- if settings.color_swatch_style == 'variant' or settings.color_swatch_style == 'variant_grouped'-%}
          {%- if variant.image != null -%}
          {%- else -%}
          background-color: {{ color | split: ' ' | last | handle }};
          {%- endif -%}
          {%- else -%}
          {%- if text == 'white' -%}border: 1px solid #d1d1d1; {%- endif -%}
          background-color: {{ color | split: ' ' | last | handle }};
          {%- endif -%}
        ">
          {% if settings.color_swatch_style =='variant' or settings.color_swatch_style == 'variant_grouped' %}
            {% if variant.image != null %}
            <img loading="lazy" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                 class="lazyload"
                 data-src="{{ variant.image.src | product_img_url: '24x'}}"
                 data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-aspectratio="{{ variant.image.src | product_img_url: '24x'}}"
                 data-sizes="auto">
            {% endif %}
          {% endif %}
        </label>

        {% assign option_count = option_count | plus : 1 %}
    </li>
    {% else %}

      {% if option_count == 4 %}
      <li class="group-swatch" style="display: none">
      {% endif %}
      <div>
        <div class="tooltip">
            {{color}}
        </div>

        <label data-value="{{ text }}" title="{{color}}" {% if variant.image != null %}  data-img="{{ variant.image.src | product_img_url: '800x' }}"{% endif %} style="
          {%- if settings.color_swatch_style == 'variant' or settings.color_swatch_style == 'variant_grouped'-%}
          {%- if variant.image != null -%}
          {%- else -%}
          background-color: {{ color | split: ' ' | last | handle }};
          {%- endif -%}
          {%- else -%}
          {%- if text == 'white' -%}border: 1px solid #d1d1d1; {%- endif -%}
          background-color: {{ color | split: ' ' | last | handle }};
          {%- endif -%}
        ">
          {% if settings.color_swatch_style =='variant' or settings.color_swatch_style == 'variant_grouped' %}
            {% if variant.image != null %}
            <img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                 class="lazyload"
                 data-src="{{ variant.image.src | product_img_url: '24x'}}"
                 data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                 data-aspectratio="{{ variant.image.src | product_img_url: '24x'}}"
                 data-sizes="auto">
            {% endif %}
          {% endif %}
        </label>
      </div>

      {% if forloop.last %}
      </li>
      {% endif %}

      {% assign option_count = option_count | plus : 1 %}

    {% endif %}

    {% capture tempList %}
    {{ colorlist | append: color | append: ' ' }}
    {% endcapture %}

    {% assign colorlist = tempList %}
    {% endunless %}

    {% endfor %}
    {% endif %}
    {% endfor %}

    {% for product_option in product.options_with_values %}
  
    {% assign downcased_option = product_option.name | downcase %}
    {% assign option_color_swatch = settings.option_color_swatch | downcase %}
  
    {% if option_color_swatch contains downcased_option %}
    {% if product_option.values.size > 4 %}
    <li class="item-swatch-more">
        <a href="javascript:void(0)" title="More Color">
            <span>+</span> {{ product_option.values.size | minus : 4 }}
        </a>
    </li>
    {% endif %}
    {% endif %}
    {% endfor %}
</ul>
{% endif %}
